{
    "name": "fs-match",
    "version": "2.0.1",
    "license": "LGPL-3.0",
    "author": "shiy2008@gmail.com",
    "description": "A NodeJS package for finding folders, files & apps by Regular expression based on Asynchronous iteration of ES 9 & TypeScript",
    "keywords": [
        "search",
        "filesystem",
        "regex-match",
        "command-line",
        "async",
        "iterator",
        "typescript"
    ],
    "homepage": "https://tech-query.me/fs-match/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/TechQuery/fs-match.git"
    },
    "bugs": {
        "url": "https://github.com/TechQuery/fs-match/issues"
    },
    "main": "dist/core.js",
    "bin": {
        "fs-match": "dist/find.js",
        "app-find": "dist/which.js"
    },
    "dependencies": {
        "@tech_query/node-toolkit": "^2.0.0-beta.3",
        "commander-jsx": "^0.7.2",
        "fs-extra": "^11.3.2",
        "tslib": "^2.8.1"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.0",
        "@types/fs-extra": "^11.0.4",
        "@types/jest": "^29.5.14",
        "@types/node": "^22.18.13",
        "eslint": "^9.39.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-simple-import-sort": "^12.1.1",
        "globals": "^16.5.0",
        "husky": "^9.1.7",
        "jest": "^29.7.0",
        "jiti": "^2.6.1",
        "lint-staged": "^16.2.6",
        "open-cli": "^8.0.0",
        "prettier": "^3.6.2",
        "ts-jest": "^29.4.5",
        "typedoc": "^0.28.14",
        "typedoc-plugin-mdn-links": "^5.0.10",
        "typescript": "~5.9.3",
        "typescript-eslint": "^8.46.2"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{md,json,yml,ts,tsx}": "prettier --write",
        "*.{ts,tsx}": "eslint --fix"
    },
    "jest": {
        "preset": "ts-jest",
        "testTimeout": 60000
    },
    "scripts": {
        "prepare": "husky",
        "lint": "lint-staged",
        "parcel": "rm -rf dist/  &&  tsc  &&  mv dist/source/* dist/  &&  rm -rf dist/eslint.* dist/source",
        "test": "npm run parcel  &&  typedoc  &&  jest --no-cache",
        "build": "lint-staged  &&  npm test",
        "prepublishOnly": "npm run build",
        "start": "typedoc  &&  open-cli docs/index.html"
    }
}
