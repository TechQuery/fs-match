{
    "name": "fs-match",
    "version": "1.6.0",
    "description": "A NodeJS package for finding folders, files & apps by Regular expression based on Asynchronous iteration of ES 9 & TypeScript",
    "keywords": [
        "search",
        "filesystem",
        "regex-match",
        "command-line",
        "async",
        "iterator",
        "typescript"
    ],
    "author": "shiy2008@gmail.com",
    "license": "LGPL-3.0",
    "homepage": "https://tech-query.me/fs-match/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/TechQuery/fs-match.git"
    },
    "bugs": {
        "url": "https://github.com/TechQuery/fs-match/issues"
    },
    "main": "dist/core.js",
    "bin": {
        "fs-match": "dist/find.js",
        "app-find": "dist/which.js"
    },
    "scripts": {
        "lint": "lint-staged",
        "test": "tsc  &&  typedoc source/  &&  jest --no-cache",
        "build": "lint-staged  &&  rm -rf dist/  &&  npm test",
        "prepublishOnly": "npm run build",
        "start": "typedoc source/  &&  open-cli docs/index.html"
    },
    "dependencies": {
        "commander-jsx": "^0.6.1",
        "fs-extra": "^10.0.0"
    },
    "devDependencies": {
        "@types/fs-extra": "^9.0.13",
        "@types/jest": "^27.4.0",
        "@types/node": "^14.18.4",
        "@typescript-eslint/eslint-plugin": "^5.8.1",
        "@typescript-eslint/parser": "^5.8.1",
        "eslint": "^8.6.0",
        "eslint-config-prettier": "^8.3.0",
        "husky": "^7.0.4",
        "jest": "^27.4.5",
        "lint-staged": "^12.1.5",
        "open-cli": "^7.0.1",
        "prettier": "^2.5.1",
        "ts-jest": "^27.1.2",
        "typedoc": "^0.22.10",
        "typescript": "^4.5.4"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "none",
        "arrowParens": "avoid",
        "tabWidth": 4
    },
    "lint-staged": {
        "*.{md,json,yml,ts,tsx}": "prettier --write",
        "*.{ts,tsx}": "eslint --fix"
    },
    "jest": {
        "preset": "ts-jest",
        "testTimeout": 60000
    }
}
