{
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "jsxImportSource": "commander-jsx",
        "importHelpers": true,
        "lib": ["ES2019"],
        "target": "ES2017",
        "declaration": true,
        "skipLibCheck": true,
        "outDir": "dist/"
    },
    "include": ["source/*", "*.ts"],
    "typedocOptions": {
        "name": "FS Match",
        "excludeExternals": true,
        "excludePrivate": true,
        "entryPoints": ["source/core.ts", "source/windows.ts"],
        "readme": "./ReadMe.md",
        "plugin": ["typedoc-plugin-mdn-links"]
    }
}
